---
import { Image } from "astro:assets";

type Props = {
  image: ImageMetadata;
  loading?: "eager" | "lazy";
};

const { loading = "lazy", image } = Astro.props;
---

<Image
  src={image}
  alt=""
  width={96}
  height={96}
  class="h-12 w-12 shrink-0 rounded-full object-cover"
  densities={[1, 1.5, 2]}
  loading={loading}
/>
